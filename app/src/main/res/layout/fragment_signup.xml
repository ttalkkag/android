<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="62dp"
        android:layout_marginTop="386dp"
        android:layout_marginBottom="402dp"
        android:background="@drawable/shape_border_12_blue_line"
        android:hint="닉네임을 입력하세요"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/tv_signup_name"
        style="@style/TextAppearance.TTALKKAG.Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="닉네임"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_signup_profile1" />

    <ImageView
        android:id="@+id/iv_signup_profile2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_signup_profile1"
        app:layout_constraintEnd_toEndOf="@+id/iv_signup_profile1"
        app:layout_constraintStart_toStartOf="@+id/iv_signup_profile1"
        app:layout_constraintTop_toTopOf="@+id/iv_signup_profile1"
        app:srcCompat="@drawable/img_signup_profile" />


    <ImageView
        android:id="@+id/iv_signup_loginback"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="801dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_signup_login" />

    <TextView
        android:id="@+id/tv_signup_login"
        style="@style/TextAppearance.TTALKKAG.Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:text="로그인"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_signup_loginback"
        app:layout_constraintStart_toStartOf="@+id/iv_signup_loginback"
        app:layout_constraintTop_toTopOf="@+id/iv_signup_loginback" />

    <ImageView
        android:id="@+id/iv_signup_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_signup_loginback"
        app:layout_constraintEnd_toEndOf="@+id/iv_signup_loginback"
        app:layout_constraintStart_toStartOf="@+id/iv_signup_loginback"
        app:layout_constraintTop_toTopOf="@+id/iv_signup_loginback"
        app:srcCompat="@drawable/ic_signup_arrowforward" />

    <ImageView
        android:id="@+id/iv_signup_profile1"
        android:layout_width="171dp"
        android:layout_height="171dp"
        android:layout_marginTop="99dp"
        android:layout_marginBottom="559dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_signup_stroke" />

</androidx.constraintlayout.widget.ConstraintLayout>