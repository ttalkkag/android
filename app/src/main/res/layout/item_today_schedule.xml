<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_first_circle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:background="@drawable/shape_circle"
        app:layout_constraintTop_toTopOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        style="@style/TextAppearance.TTALKKAG.Year"
        app:layout_constraintStart_toEndOf="@id/view_first_circle"
        app:layout_constraintTop_toTopOf="@id/tv_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_content"
        android:layout_marginStart="30dp"/>

    <View
        android:id="@+id/view_second_circle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_time"
        android:layout_marginStart="30dp"
        android:background="@drawable/shape_circle_fill"
        app:layout_constraintTop_toTopOf="@id/tv_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_content"/>

    <View
        android:layout_width="35dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toEndtOf="@id/view_second_circle"
        app:layout_constraintEnd_toStartOf="@id/tv_content"
        app:layout_constraintTop_toTopOf="@id/tv_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_content"
        android:background="@color/ttal_kkag_sky"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일정 내용"
        style="@style/TextAppearance.TTALKKAG.Year"
        app:layout_constraintStart_toEndOf="@id/view_second_circle"
        android:layout_marginStart="30dp"
        android:background="@drawable/shape_rect_40_fill"
        android:paddingVertical="5dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>