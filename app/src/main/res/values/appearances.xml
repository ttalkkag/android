<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.TTALKKAG" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.TTALKKAG.Head1">
        <item name="fontFamily">@font/cafe_ohsquare</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.TTALKKAG.Head2">
        <item name="fontFamily">@font/cafe_ohsquare_air</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TTALKKAG.Body1">
        <item name="fontFamily">@font/cafe_ohsquare_air</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TTALKKAG.Warning">
        <item name="fontFamily">@font/cafe_ohsquare_air</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TTALKKAG.Bnv">
        <item name="fontFamily">@font/cafe_ohsquare_air</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.TTALKKAG.Title">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">#3E8BFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TTALKKAG.ConfirmBtn">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.TTALKKAG.ScheduleList">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TTALKKAG.Month">
        <item name="fontFamily">Roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TTALKKAG.Year">
        <item name="fontFamily">Roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>